{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Necesario para que funcionen los paths
    "paths": {
      "@/*": ["./src/*"] // Ejemplo: apunta a la carpeta "src"
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}